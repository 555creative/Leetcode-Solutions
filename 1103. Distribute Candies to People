class Solution {
    public int[] distributeCandies(int candies, int n) {
        int arr [] = new int [n];
        int i =0;
        int j = 1;
        while(candies!=0)
        {
            if(i==n) i=0;
            if(candies<=j)
            {
                arr[i] += candies;
                candies -=candies;
            }
            else
            {
                arr[i] += j;
                candies = candies-j;
                i++;
                j++;
            }
        }
        return arr;
    }
}
